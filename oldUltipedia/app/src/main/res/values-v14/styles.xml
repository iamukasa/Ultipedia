<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
          <item name="android:capitalize">characters</item> 
        <item name="android:typeface">serif</item> 
        <item name="android:shadowRadius">2</item> 
         <item name="android:textColor">#FFFFFF</item>
         <item name="android:fadeEnabled">true </item>
         <item name="android:fadeDuration">500</item>
         <item name="android:animationResolution">400</item>
         <item name="android:fastScrollAlwaysVisible">true</item>
         <item name="android:animateOnClick">true</item>
         
         
         <item name="android:textSize" >7pt</item> 
         <item name="android:shadowColor" >#000000</item>
         <item name="android:gravity">center</item>
         <item name="android:background">#00B7EF </item>
    </style>

</resources>
