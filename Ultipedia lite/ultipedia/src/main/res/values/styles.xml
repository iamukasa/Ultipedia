<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="CustomFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#000000</item>
        <item name="android:scaleType">fitXY
        </item>


    </style>

    <style name="CustomChoice">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>

    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">normal</item>
        <item name="android:fadeEnabled">true</item>
        <item name="android:fadeDuration">500</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">#000000</item>


        <item name="android:textSize">7pt</item>

        <item name="android:gravity">center</item>

    </style>

</resources>
